# Example environment variables for local runs
# Copy this file to `.env` and fill values where required.

# YouTube Data API
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY_HERE

# Discourse base
DISCOURSE_BASE_URL=https://community.n8n.io

# Pytrends anchor (optional) â€” used to convert relative interest to estimated monthly searches
PYTRENDS_ANCHOR_KEYWORD=n8n Slack integration
PYTRENDS_ANCHOR_VOLUME=3600

# Optional DB (Postgres asyncpg). If unset, the app falls back to JSON files
DATABASE_URL=postgresql+asyncpg://postgres:postgres@127.0.0.1:5432/n8n_popularity

# Optional Google Ads (Keyword Planner). Provide a path to google-ads.yaml and a customer id to enable
#GOOGLE_ADS_CONFIG_PATH=/path/to/google-ads.yaml
#GOOGLE_ADS_CUSTOMER_ID=1234567890

# Optional proxy for collectors / pytrends
#COLLECTOR_PROXY=http://proxy.host:3128
# Database (Postgres)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/n8n_popularity

# YouTube Data API
YOUTUBE_API_KEY=REPLACE_ME

# Discourse
DISCOURSE_BASE_URL=https://forum.n8n.io
DISCOURSE_API_KEY=REPLACE_ME
DISCOURSE_API_USER=system

# Google Trends (pytrends) settings (no key)
# Optional: proxy settings if needed
PYTRENDS_PROXIES=

# App config
APP_HOST=0.0.0.0
APP_PORT=8000

# Scoring params
SCORE_HALF_LIFE_DAYS=30
